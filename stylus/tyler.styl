$back = #0A70A2
$front = #1BA1E2 // see http://stackoverflow.com/a/11579376/435124
$text = rgba(255,255,255,.7)

.tile
	border solid $back
	margin-top -1px
	position absolute
	-webkit-backface-visibility hidden
	-webkit-perspective 1000

	&:nth-child(even)
		border-width 1px 0 0 1px

	&:nth-child(odd)
		border-width 1px 0 0 0

	&.flipped
		z-index 3

		.tile-inner
			z-index 4
			-webkit-animation Flip .7s forwards

.tile-inner
	height 100%
	position relative
	width 100%
	-webkit-animation Unflip .5s
	-webkit-backface-visibility hidden
	-webkit-transform-style preserve-3d

.tile-front
.tile-back
	background-size cover
	bottom 0
	left 0
	position absolute
	right 0
	top 0
	-webkit-backface-visibility hidden

.tile-front
	background-color $front
	z-index 2

.tile-back
	background $back
	-webkit-transform rotateX(180deg)

.name
	color $text
	display block
	font-size 30px
	padding 0 3px
	position absolute
	bottom 0
	left 0

@-webkit-keyframes Flip

	0%
		-webkit-transform rotateX(0)

	100%
		-webkit-transform rotateX(180deg)

	// 0%
	// 	-webkit-transform rotateX(0)

	// 40%
	// 	-webkit-transform rotateX(190deg)

	// 55%
	// 	-webkit-transform rotateX(160deg)

	// 70%
	// 	-webkit-transform rotateX(185deg)

	// 100%
	// 	-webkit-transform rotateX(180deg)

@-webkit-keyframes Unflip

	0%
		-webkit-transform rotateX(180deg)

	100%
		-webkit-transform rotateX(0)
