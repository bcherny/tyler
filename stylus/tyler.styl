.tile
	position absolute
	-webkit-backface-visibility hidden
	-webkit-perspective 1000

	&.flipped
		z-index 3

		.tile-inner
			z-index 4
			-webkit-transform rotateX(180deg)

.tile-inner
	height 100%
	position relative
	width 100%
	-webkit-transform-style preserve-3d

.tile-front
.tile-back
	bottom 0
	left 0
	position absolute
	right 0
	top 0
	-webkit-backface-visibility hidden

.tile-front
	z-index 2

.tile-back
	background #333
	-webkit-transform: rotateX(180deg)